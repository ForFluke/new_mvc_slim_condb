{% include './header.twig' %}
<body class="theme-red ls-closed" style="padding: 50px">

        <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Edit
                                <small>Edit Menu   {{data.menu_name}}</small>
                            </h2>
                        </div>
                        <div class="body">
                                <h2 class="card-inside-title">Edit Menu </h2>
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" class="form-control" id="menu_name"  name="menu_name" placeholder="menu_name" value="{{data.menu_name}}">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" class="form-control" id="part_menu"  name="part_menu" placeholder="Password" value="{{data.part_menu}}">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                                <div class="form-line">
                                                    <select class="form-control show-tick" id="status" name="status" tabindex="-98">
                                                        <option value="" >-- Please select --</option>
                                                        {% for i in 1..2 %}
                                                            {% if data.status == loop.index %}
                                                                {% set selected = 'selected' %}
                                                            {% endif %}
                                                                <option value="{{loop.index}}" {{selected}}>เปิดการใช้งาน </option>
                                                            {% set selected = '' %}
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                    <div class="form-line" style="text-align: center;">
                                                    <button type="button" class="btn btn-success waves-effect" onclick="update_menu_detail()">SUCCESS</button>
                                                </div>
                                            </div>
                                    </div>
                                </div>
    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

   {% include './footer.twig' %}