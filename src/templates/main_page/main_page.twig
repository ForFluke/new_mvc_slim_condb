
    {% include './header.twig' %}

    <body class="theme-red ls-closed" style="padding: 50px">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Show Data in Database
                            <small>Select data in table mvc_menu </small>
                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Menu Name</th>
                                    <th>Part</th>
                                    <th>Status</th>
                                    <th>Manage</th>
                                </tr>
                            </thead>
                            <tbody>
                                    {% for data_menu in data.data_menu  %}
                                    <tr>
                                        <th scope="row">{{loop.index}}</th>
                                        <td>{{data_menu.menu_name}}</td>
                                        <td>{{data_menu.part_menu}}</td>
                                        <td>
                                            {% if data_menu.status == 1 %} เปิดใช้งาน {% else %} ไม่เปิดให้ใช้งาน {% endif %}
                                        </td>
                                        <td>
                                            <a href="#" onclick="edit_menu('{{data_menu.id}}')" >
                                               แก้ไขข้อมูล
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

   {% include './footer.twig' %}
