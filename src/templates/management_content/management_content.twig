{% include './header.twig' %}
<body class="theme-red ls-closed" style="padding: 50px">

        <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Edit Content
                                <small>Edit   {{data.menu_name}}</small>
                            </h2>
                        </div>
                        <div class="body">
                            <form id="edit_value"  method="post" action="" >
                                <input type="hidden" class="form-control" id="id"  name="id" value="{{data.id}}">
                                <h2 class="card-inside-title">Edit Content </h2>
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" class="form-control" id="title"  name="title" placeholder="title" value="{{data.title}}" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <textarea rows="4" class="form-control no-resize" placeholder="Please type what you want..." id="detail"  name="detail" >{{data.detail}}</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                
                                        </div>
                                        <div class="form-group"  style="text-align: center;">
                                                    <button type="button" class="btn btn-success waves-effect" onclick="update_content_detail()">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>

